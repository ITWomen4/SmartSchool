<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.entity.Files" table="Files">
		<id name="user_id" column="user_id">
			<generator class="native"></generator>		
		</id>
		<property name="realname" column="realname" length="20"></property>
		<property name="username" column="username" length="20"></property>
		<property name="password" column="password" length="20"></property>
		<property name="role" column="role" length="20"></property>
	</class>
</hibernate-mapping>