<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.entity.LgNotice" table="LgNotice">
		<id name="noticeId" column="noticeId">
			<generator class="native"></generator>		
		</id>
		<property name="noticeName" column="noticeName" length="255"></property>
		<property name="uploaderName" column="uploaderName" length="20"></property>
		<property name="content" column="content" length="255"></property>
		<property name="uploadTime" column="uploadTime" ></property>
	</class>
</hibernate-mapping>