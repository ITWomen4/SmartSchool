<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
    "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
    "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
    
<hibernate-mapping>
	<class name="com.entity.Book" table="book">
		<id name="isbn" column="isbn">
			<generator class="native"></generator>		
		</id>
		<property name="bkName" column="bk_name" length="50" not-null="true"></property>
		<property name="price" column="price" length="20" not-null="true" ></property>
		<property name="contact" column="contact" length="20" not-null="true"></property>
		<property name="userId" column="user_id" not-null="true"></property>
		<property name="content" column="content" length="200" ></property>
		<property name="pic" column="pic" length="200" ></property>
		
	</class>
</hibernate-mapping>